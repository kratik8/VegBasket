<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Orders - VegBasket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #444;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
    }
    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    th {
      background-color: #2c3e50;
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-size: 0.9em;
    }
    tr:hover {
      background-color: #f1f8ff;
    }
    ul {
      margin: 0;
      padding-left: 20px;
    }
    .badge {
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.8em;
    }
    .bg-primary { background-color: #007bff; color: white; }
    .bg-warning { background-color: #ffc107; color: black; }
    .bg-success { background-color: #28a745; color: white; }
    .bg-danger  { background-color: #dc3545; color: white; }
    a.print-link {
      color: #2980b9;
      font-weight: bold;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    a.print-link:hover {
      color: #1c5980;
      text-decoration: underline;
    }
    @media (max-width: 600px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }
      tr {
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        background: #fff;
      }
      th {
        display: none;
      }
      td {
        padding-left: 50%;
        position: relative;
        text-align: right;
        border: none;
      }
      td::before {
        content: attr(data-label);
        position: absolute;
        left: 15px;
        width: 45%;
        font-weight: bold;
        text-align: left;
      }
    }
  </style>
</head>

<body>
<%- include('../partials/header-admin') %>

  <h2>All Orders</h2>

  <% if (isAdmin) { %>
    <div class="d-flex flex-wrap justify-content-center align-items-center gap-3 mb-4">
      <form method="GET" action="/admin/orders" class="d-flex flex-wrap gap-2" style="max-width: 500px;">
        <input type="text" name="search" placeholder="Search by name or address" value="<%= typeof search !== 'undefined' ? search : '' %>" class="form-control" />
        <button type="submit" class="btn btn-dark fw-bold">Search</button>
      </form>
      <a href="/admin/completed-orders" class="btn btn-success fw-bold">‚úÖ Completed Orders</a>
      <a href="/admin/completed-paid-orders" class="btn btn-success fw-bold">‚úÖ Completed & Paid Orders</a>
    </div>
  <% } %>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Address</th>
        <th>Items</th>
        <th>Total</th>
        <th>Date</th>
        <th>Status</th>
        <th>Update</th>
        <th>Payment</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td data-label="User"><%= order.name %></td>
          <td data-label="Address"><%= order.address || 'Unknown User' %></td>
          <td data-label="Items">
            <ul>
              <% order.items.forEach(item => { %>
                <li><%= item.name %> x <%= item.quantity || item.qty %></li>
              <% }) %>
            </ul>
          </td>
          <td data-label="Total">‚Çπ<%= order.total %></td>
          <td data-label="Date"><%= new Date(order.createdAt).toLocaleDateString() %></td>
          <td data-label="Status">
            <span class="badge bg-<%= order.status === 'Placed' ? 'primary' : (order.status === 'Completed' ? 'success' : 'warning') %>">
              <%= order.status %>
            </span>
          </td>
          <td data-label="Update">
            <form action="/admin/update-status/<%= order._id %>" method="POST">
              <select name="status" class="form-select form-select-sm">
                <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="Placed" <%= order.status === 'Placed' ? 'selected' : '' %>>Placed</option>
                <option value="Completed" <%= order.status === 'Completed' ? 'selected' : '' %>>Completed</option>
              </select>
              <button class="btn btn-sm btn-primary mt-1 w-100" type="submit">Update</button>
            </form>
          </td>
          <td data-label="Payment">
            <span class="badge bg-<%= order.paymentStatus === 'Paid' ? 'success' : (order.paymentStatus === 'Pending' ? 'warning' : 'danger') %>">
              <%= order.paymentStatus || 'Unknown' %>
            </span>
          </td>
          <td data-label="Action">
            <a href="/admin/print-bill/<%= order._id %>" target="_blank" class="print-link">üñ®Ô∏è Print</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
