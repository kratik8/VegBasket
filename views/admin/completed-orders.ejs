<%- include('../partials/header-admin') %>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #444;
    }
    .btn {
      display: inline-block;
      background-color: #27ae60;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      margin-right: 10px;
      margin-bottom: 14px;
      transition: background 0.3s ease;
    }
    .back-btn{
      display: inline-block;
      background-color: #298089;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
      margin-right: 10px;
      transition: background 0.3s ease;
    }
    .btn:hover {
      background-color: #1f8a4c;
    }
    .filter-form {
      margin-bottom: 20px;
      text-align: center;
    }
    .filter-form input[type="date"] {
      padding: 7px 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin: 0 5px;
    }
    .filter-form button {
      padding: 7px 15px;
      background-color: #2980b9;
      border: none;
      color: white;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }
    .filter-form button:hover {
      background-color: #1c5980;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      border-radius: 8px;
      overflow: hidden;
    }
    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    th {
      background-color: #2C3E50;
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-size: 0.9em;
    }
    tr:hover {
      background-color: #eafaf1;
    }
    ul {
      margin: 0;
      padding-left: 20px;
    }
    .badge {
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.8em;
    }
    .bg-success { background-color: #28a745; color: white; }
    .bg-warning { background-color: #ffc107; color: black; }
    .bg-danger { background-color: #dc3545; color: white; }
    .bg-secondary { background-color: #6c757d; color: white; }
    .print-link {
      color: #2980b9;
      font-weight: bold;
      text-decoration: none;
    }
    .print-link:hover {
      text-decoration: underline;
      color: #1c5980;
    }

    @media (max-width: 600px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }
      tr {
        margin-bottom: 15px;
      }
      th {
        display: none;
      }
      td {
        padding-left: 50%;
        position: relative;
        text-align: right;
        border-bottom: 1px solid #eee;
      }
      td::before {
        content: attr(data-label);
        position: absolute;
        left: 15px;
        width: 45%;
        padding-left: 15px;
        font-weight: bold;
        text-align: left;
        white-space: nowrap;
      }
    }
  </style>
</head>
<body>
  <h2>‚úÖ Completed Orders</h2>

  <div style="text-align: center; margin-bottom: 20px;">
    <a href="/admin/orders" class="back-btn">‚¨Ö Back to All Orders</a>
    <a href="/admin/completed-paid-orders" class="btn">‚úÖ View Completed & Paid Orders</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Address</th>
        <th>Items</th>
        <th>Total</th>
        <th>Date Completed</th>
        <th>Payment Method</th>
        <th>Payment Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if (orders.length === 0) { %>
        <tr>
          <td colspan="7" style="text-align: center;">No completed orders found.</td>
        </tr>
      <% } else { %>
        <% orders.forEach(order => { %>
          <tr>
            <td data-label="User"><%= order.name %></td>
            <td data-label="Address"><%= order.address ? order.address : 'Unknown User' %></td>
            <td data-label="Items">
              <ul>
                <% order.items.forEach(item => { %>
                  <li><%= item.name %> x <%= item.quantity || item.qty %></li>
                <% }) %>
              </ul>
            </td>
            <td data-label="Total">‚Çπ<%= order.total %></td>
            <td data-label="Date Completed"><%= new Date(order.updatedAt || order.completedAt || order.createdAt).toLocaleDateString() %></td>
            <td data-label="Payment Method"><%= order.paymentMethod || 'N/A' %></td>
            <td data-label="Payment Status">
              <% if (order.paymentMethod === 'COD') { %>
                <form action="/admin/update-payment-status/<%= order._id %>" method="POST" style="display: flex; gap: 5px; align-items: center;">
                  <select name="paymentStatus">
                    <option value="Pending" <%= order.paymentStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                    <option value="Paid" <%= order.paymentStatus === 'Paid' ? 'selected' : '' %>>Paid</option>
                    <option value="Failed" <%= order.paymentStatus === 'Failed' ? 'selected' : '' %>>Failed</option>
                  </select>
                  <button type="submit">Update</button>
                </form>
              <% } else { %>
                <% if (order.paymentStatus === 'Paid') { %>
                  <span class="badge bg-success">Paid</span>
                <% } else if (order.paymentStatus === 'Pending') { %>
                  <span class="badge bg-warning">Pending</span>
                <% } else if (order.paymentStatus === 'Failed') { %>
                  <span class="badge bg-danger">Failed</span>
                <% } else { %>
                  <span class="badge bg-secondary">Unknown</span>
                <% } %>
              <% } %>
            </td>
            <td data-label="Action">
              <a href="/admin/print-bill/<%= order._id %>" target="_blank" class="print-link">üñ®Ô∏è Print</a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
